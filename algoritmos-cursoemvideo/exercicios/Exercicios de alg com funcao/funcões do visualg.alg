algoritmo "semnome"
var
   n:caractere
   c:inteiro
inicio
  escreva(" Digite seu nome: ")
  leia(n)
  escreval("total de letra do seu nome: ", compr(n))
  escreval("Seu nome em maisculo é ",maiusc(n))
  escreval("Seu nome em minusculo é ",minusc(n))
   escreval(" A primeira letra do seu nome é ",copia(n,1, 1))
    escreval(" A ultima letra do seu nome é ",copia(maiusc(n),compr(n), 1))
    escreval(" Seu nome tem a letra a na posicao ", pos("L", maiusc(N)))
    escreval(" O codigo da letra L é ", asc("L"))
    escreval(" A letra de codigo 76 é ",carac(76))
    para c <- compr(n) ate 12 passo -1 faca
        escreva(copia(maiusc(n),c, 1))
    fimpara
  
fimalgoritmo



































































































































































































































































































































































